// 0ms Runtime Beats 100%
// 41.47MB Memory Beats 98.32%
public class Solution {
    public bool CheckRecord(string s) {
        int absent = 0;
        int late = 0;

        foreach (char c in s)
        {
            if (c == 'A')
            {
                late = 0;
                absent++;
                if (absent > 1) return false;
            }
            else if (c == 'L')
            {
                late++;
                if (late > 2) return false;
            }
            else late = 0;
        }

        return true;
    }
}
