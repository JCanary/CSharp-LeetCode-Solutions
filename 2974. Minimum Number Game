// 4ms Runtime Beats 34.25%
// 50.16MB Memory Beats 26.03%
public class Solution {
    public int[] NumberGame(int[] nums) {
        Array.Sort(nums);

        var list = new List<int>();

        var myStack = new Stack<int>();

        int counter = 0;

        foreach (int i in nums)
        {
            counter++;
            myStack.Push(i);
            if (counter == 2)
            {
                list.Add(myStack.Pop());
                list.Add(myStack.Pop());
                counter = 0;
            }
        }

        if (myStack.Count != 0)
        {
            list.Add(myStack.Pop());
        }

        int[] output = [.. list];

        return output;
    }
}
