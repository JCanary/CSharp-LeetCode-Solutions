// 1ms Runtime Beats 19.51%
// 48.29MB Memory Beats 28.46%
public class Solution {
    public char NextGreatestLetter(char[] letters, char target) {
        char output = '{';
        bool flag = false;

        foreach (char c in letters)
        {
            if ((int)c > (int)target && (int)c < (int)output)
            {
                output = c;
                flag = true;
            }
        }

        if (!flag) return letters[0];
        else return output;
    }
}
