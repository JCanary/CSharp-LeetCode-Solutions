// 0ms Runtime Beats 100%
// 44.43MB Memory Beats 73.91%
public class Solution {
    public int MaxAdjacentDistance(int[] nums) {
        int output = Math.Abs(nums[0] - nums[nums.Length - 1]);

        for (int i = 0; i < nums.Length - 1; i++)
        {
            int j = Math.Abs(nums[i] - nums[i + 1]);
            if (j > output) output = j;
        }

        return output;
    }
}
